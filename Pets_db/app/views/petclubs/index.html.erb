<h1>Listing petclubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @petclubs.each do |petclub| %>
      <tr>
        <td><%= petclub.name %></td>
        <td><%= petclub.description %></td>
        <td><%= link_to 'Show', petclub %></td>
        <td><%= link_to 'Edit', edit_petclub_path(petclub) %></td>
        <td><%= link_to 'Destroy', petclub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Petclub', new_petclub_path %>
