<%= form_for(@state) do |f| %>
  <% if @state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
      <% @state.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- <%= f.label :name %><br>  -->
    Enter your guesses, one state at a time, until you get them all: <br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Guess a state"%>
  </div>
<% end %>
